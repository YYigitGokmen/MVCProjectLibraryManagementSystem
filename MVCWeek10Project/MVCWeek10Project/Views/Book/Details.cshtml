@model MVCWeek10Project.Models.Book

<h2>Book Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <p><strong>Author:</strong> @Model.AuthorId</p> 
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</p>
        <p><strong>ISBN:</strong> @Model.ISBN</p>
        <p><strong>Copies Available:</strong> @Model.CopiesAvailable</p>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </div>
</div>