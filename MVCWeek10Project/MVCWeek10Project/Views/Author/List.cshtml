@model IEnumerable<MVCWeek10Project.Models.Author>

<h2>Author List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Author</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a asp-action="Create" asp-route-id="@author.Id" class="btn btn-success">Create</a>
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

